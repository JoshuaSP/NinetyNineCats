<p id="notice"><%= notice %></p>

<h1><%= @cat.name %></h1>

<table>
  <thead>
  <tr>
    <% %w(Age Color Sex Description).each do |attr_name| %>
      <th><%= attr_name %></th>
    <% end %>
  </tr>
  </thead>
  <tr>
    <% [:age, :color, :sex, :description].each do |attr_name| %>
      <td><%= @cat.send(attr_name) %></td>
    <% end %>
  </tr>
</table>
<br/>
<%= link_to 'Edit', edit_cat_path(@cat) %> |
<%= link_to 'Back', cats_path %>
<br/>
<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.cat_rental_requests.order(:start_date).each do |request| %>
    <%= render 'request', request: request %>
  <% end %>
</table>
